<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:integration="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd">


  <integration:inbound-channel-adapter ref="personDirectoryService" method="findNewPeople" channel="printChannel">
    <integration:poller fixed-rate="3000">

    </integration:poller>
  </integration:inbound-channel-adapter>
  <bean id="personDirectoryService" class="com.oreilly.integration.PersonDirectoryService"/>


  <integration:channel id="printChannel"/>
  <integration:channel id="uppercaseChannel"/>


  <bean class="com.oreilly.integration.PrintService" id="printService"/>
  <bean class="com.oreilly.integration.UpercaseService" id="upercaseService"/>

  <integration:service-activator ref="upercaseService" method="execute" input-channel="uppercaseChannel"
  />
  <integration:service-activator ref="printService" method="print" input-channel="printChannel"/>

</beans>